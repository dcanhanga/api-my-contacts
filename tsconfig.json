{
	"compilerOptions": {
		"incremental": true,
		"outDir": "dist",
		"sourceMap": true,
		"rootDirs": ["src"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"lib": ["ES2022"],
		"module": "node16",
		"target": "ES2022",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["staged"]
}
