{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"recommended": true
			},
			"complexity": { "noStaticOnlyClass": "off" },
			"style": {
				"noUnusedTemplateLiteral": "off"
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"fix": "none"
				}
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"jsxQuoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"files": {
		"ignore": ["build"]
	}
}
