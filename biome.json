{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,
			"complexity": { "noStaticOnlyClass": "off" },
			"performance": {
				"recommended": true
			},
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
